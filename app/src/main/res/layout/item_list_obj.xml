<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo"
    android:onClick="getActivityIntereses"
    android:orientation="vertical"
    tools:context=".pantallaResultados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idImagenSP"
            android:layout_width="130dp"
            android:layout_height="148dp"
            app:srcCompat="@drawable/animeicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idNombre"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="67dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/montserrat"
                android:text="random 3"
                android:textColor="@color/Letras"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/idEdad"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="78dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="125dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Edad: "
                android:textColor="@color/Letras"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/button7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <Button
                android:id="@+id/bVerPerfil"
                android:layout_width="135dp"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="71dp"
                android:layout_marginBottom="578dp"
                android:backgroundTint="@color/BotonesColor"
                android:fontFamily="@font/montserrat"
                android:onClick="getActivityPerfilRandom"
                android:text="Ver Perfil"
                android:textColor="@color/Letras"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>